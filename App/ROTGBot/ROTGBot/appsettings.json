{
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            { "Name": "Console" },
            {
              "Name": "RollingFile",
              "Args": {
                "pathFormat": "Logs\\log-{Hour}.txt",
                "fileSizeLimitBytes": 104857600,
                "retainedFileCountLimit": 24,
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}",
                "buffered": true,
                "flushToDiskInterval": "00:00:10"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "urls": "http://0.0.0.0:5960;https://0.0.0.0:5961",
  "https_port": 5751,
  "ConnectionStrings": {
    "MainConnection": "Server=localhost;Database=tgbotdb;Username=postgres;Password=postgres"
  },
  "BotSettings": {
    "Token":  "token"
  },
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1"
    }
  },
  "AuthOptions": {
    "Issuer": "TGBotServer",
    "Audience": "TGBotClient",
    "Key": "secretkey",
    "LifeTime": 1440 //in minutes
  }
}
